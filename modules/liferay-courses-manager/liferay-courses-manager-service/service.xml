<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">
<service-builder dependency-injector="ds" package-path="com.liferaybook.courses.manager">

	<author>Matteo Donnini</author>
	<namespace>lb</namespace>

	<entity name="Course" local-service="true" remote-service="false">
		<!-- PK fields -->
		<column name="courseId" primary="true" type="long" />
		<!-- Other fields -->
		<column name="name" type="String" />
		<column name="description" type="String" />
		<!-- Order -->
		<order by="asc">
			<order-column name="name" />
		</order>
		<!-- Finder methods -->
		<finder name="Name" return-type="Course" unique="true">
			<finder-column name="name" />
		</finder>
	</entity>

	<entity name="Teacher" local-service="true" remote-service="false">
		<!-- PK fields -->
		<column name="teacherId" primary="true" type="long" />
		<!-- Other fields -->
		<column name="name" type="String" />
		<column name="surname" type="String" />
		<column name="age" type="int"/>
		<column name="salary" type="float" />
		<!-- Order -->
		<order by="asc">
			<order-column name="name" />
		</order>
		<!-- Finder methods -->
		<finder name="Name" return-type="Teacher" unique="true">
			<finder-column name="name" />
		</finder>
	</entity>

</service-builder>