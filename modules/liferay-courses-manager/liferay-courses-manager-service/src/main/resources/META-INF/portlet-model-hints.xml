<?xml version="1.0"?>

<model-hints>
	<model name="com.liferaybook.courses.manager.model.Course">
		<field name="courseId" type="long" />
		<field name="companyId" type="long" />
		<field name="groupId" type="long" />
		<field name="name" type="String">
			<hint name="max-length">100</hint>
		</field>
		<field name="description" type="String">
			<hint name="max-length">1000</hint>
		</field>
	</model>
	<model name="com.liferaybook.courses.manager.model.Teacher">
		<field name="teacherId" type="long" />
		<field name="name" type="String" />
		<field name="surname" type="String" />
		<field name="age" type="int" />
		<field name="salary" type="float" />
	</model>
</model-hints>